
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read their own user document, and write if they are a superuser
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Superusers can create/update other users
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superuser';
    }

    // Config document for superuser setup
    match /config/superuser {
        // Anyone can check if a superuser exists
        allow read: if true;
        // Only allow creation if it doesn't exist (first user setup)
        allow write: if request.auth != null && !exists(/databases/$(database)/documents/config/superuser);
    }

    // Raffles and other business-specific data
    match /businesses/{businessId}/{document=**} {
      // Allow read/write if user is authenticated and belongs to the business
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.businessId == businessId;
    }
  }
}
